<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_bg_control"
        android:id="@+id/ll_controller"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="12dp"
    >
        <TextView
                android:id="@+id/txt_main_title_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anh van ngoi day"
                android:textSize="26dp"
                android:textColor="@android:color/white"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/txt_main_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dan Truong"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/txt_main_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4/4"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:gravity="center"
        />
    </LinearLayout>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
    >
        <TextView
                android:id="@+id/txt_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="16dp"
        />
        <SeekBar
                android:id="@+id/seek_bar_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/my_seek_bar_horizontal"
                android:max="100"
                android:progress="50"
                android:layout_marginRight="6dp"
        />
        <TextView
                android:id="@+id/txt_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:30"
                android:textColor="@android:color/white"
                android:textSize="16dp"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >


        <ImageView
                android:id="@+id/img_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/previous"
                android:scaleType="centerInside"
        />

        <ImageView
                android:id="@+id/img_play_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/play_pause"
        />

        <ImageView
                android:id="@+id/img_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/next"
                android:scaleType="centerInside"
        />

        <ImageView
                android:id="@+id/img_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/stop"
        />
    </TableRow>

</LinearLayout>